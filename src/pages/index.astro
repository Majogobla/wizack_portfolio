---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import CodeIcon from "@/components/icons/Code.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
---

<Layout title="Wizack - Agencia de Desarrollo de Software." description="Contrata a Wizack para crear tu aplicación web o móvil. Automatiza, innova, crece con Wizack.">
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
        </slot>
      </Hero>
    </SectionContainer>

    <div class="space-y-24">
      <SectionContainer id="proyectos">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
          <CodeIcon class="size-7" /> Proyectos
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="sobre-nosotros">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white">
          <ProfileCheck class="size-8" />
          Sobre Nosotros
        </h2>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>
